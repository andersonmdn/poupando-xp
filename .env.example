# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=financial_user
DB_PASSWORD=financial_password
DB_NAME=financial_notes
DATABASE_URL=postgresql://financial_user:financial_password@localhost:5432/financial_notes

# API
API_PORT=3001
API_HTTPS_ENABLED=false
API_HTTPS_CERT_PATH=/certs/server.crt
API_HTTPS_KEY_PATH=/certs/server.key
# Alternativa ao uso de arquivos: conteúdo PEM direto nas variáveis abaixo
# API_HTTPS_CERT="-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----"
# API_HTTPS_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=1d
CORS_ORIGIN=http://localhost:3000
LOG_LEVEL=info

# Web
# Em WSL + Windows, prefira localhost para usar o port forwarding do WSL
NEXT_PUBLIC_API_URL=http://localhost:3001