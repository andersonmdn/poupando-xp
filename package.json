{
  "name": "poupando-xp-monorepo",
  "version": "1.0.0",
  "description": "Sistema Poupando XP - Monorepo com Next.js e Fastify",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "build:web": "pnpm --filter web build",
    "dev": "docker-compose up -d postgres && concurrently \"pnpm --filter api dev\" \"pnpm --filter web dev\"",
    "build": "pnpm --filter shared build && pnpm --filter api build && pnpm --filter web build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -r clean && rimraf node_modules",
    "prisma:migrate": "pnpm --filter api prisma:migrate",
    "prisma:generate": "pnpm --filter api prisma:generate",
    "prisma:studio": "pnpm --filter api prisma:studio",
    "prisma:reset": "pnpm --filter api prisma:reset",
    "prisma:seed": "pnpm --filter api prisma:seed"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0"
}
